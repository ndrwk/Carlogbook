<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/horizontal_margin"
    android:paddingRight="@dimen/horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin">

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="@string/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/smalltext_size" />

            <TextView
                android:id="@+id/eventData"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/big_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="@string/car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/smalltext_size" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerCar"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="@string/odometr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/smalltext_size" />

            <EditText
                android:id="@+id/Odometr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hintcarodometr"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:textStyle="bold"
                android:imeOptions="actionDone"
                android:textSize="@dimen/text_size" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="Поставщик"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/smalltext_size" />

            <Spinner
                android:id="@+id/spinnerProvider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/recline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_marginTop="@dimen/vertical_margin">

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="Категория"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/smalltext_size" />

            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:text="@string/part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/smalltext_size" />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerPart"
                android:layout_gravity="left|center_vertical"
                android:textColor="#000000"
                android:layout_weight="2"
                android:textSize="22dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:text="@string/qtyn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:textSize="@dimen/smalltext_size" />

            <EditText
            android:id="@+id/QTY"
            android:hint="@string/qty"
            android:textSize="@dimen/text_size"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:imeOptions="actionDone"
            android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:text="@string/summn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:textSize="@dimen/smalltext_size" />

            <EditText
                android:id="@+id/SUMM"
                android:hint="@string/summ"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="@string/currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:textSize="@dimen/smalltext_size" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spinnerCurrency"
                android:layout_gravity="left|center_vertical"
                android:textColor="#000000"
                android:textSize="22dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin">


        <EditText
            android:id="@+id/NOTE"
            android:hint="@string/note"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:imeOptions="actionDone"
            android:textSize="@dimen/text_size" />

    </LinearLayout>

    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_gravity="center" />


</LinearLayout>